{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "./dist-server",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": false,
    "resolveJsonModule": true
  },
  "include": ["server/**/*", "src/db/schema.ts"],
  "exclude": ["node_modules", "src/db/index.ts"]
}
